{
    "name": "codeigniter4/appstarter",
    "type": "project",
    "description": "bandhanhara learning - Free online learning platform for any subject, built with CodeIgniter 4",
    "homepage": "https://codeigniter.com",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "codeigniter4/framework": "^4.5",
        "google/apiclient": "^2.18",
        "guzzlehttp/guzzle": "^7.10"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Config\\": "app/Config/"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Support\\": "tests/_support"
        }
    },
    "scripts": {
        "test": "phpunit",
        "post-update-cmd": [
            "@php spark migrate",
            "php spark cache:clear"
        ]
    },
    "support": {
        "forum": "http://forum.codeigniter.com/",
        "source": "https://github.com/codeigniter4/CodeIgniter4",
        "slack": "https://codeigniter4.slack.com"
    }
}
